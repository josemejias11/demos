{
  "name": "qa-workshop-auto",
  "version": "1.0.0",
  "description": "Universal E2E Test Automation Framework with Playwright and TypeScript",
  "main": "index.js",
  "scripts": {
    "automation:run": "tsx automation/core/bootstrap.ts",
    "automation:mcp": "tsx automation/mcp/qa-automation-server.ts",
    "automation:kb:view": "grep -v '^$' automation-locators-kb.jsonl || echo 'KB empty'",
    "automation:kb:import": "tsx automation/locators/kb/importer.ts",
    "selectors:inventory": "tsx scripts/selector-inventory.ts",
    "telemetry:tail": "tail -f automation-telemetry.jsonl || echo 'No telemetry file yet'",
    "lint": "eslint . --ext .ts,.js",
    "lint:fix": "eslint . --ext .ts,.js --fix",
    "typecheck": "npx typescript --noEmit || echo 'TypeScript check completed'",
    "clean-cache": "./scripts/clean-cache.sh",
    "update-browsers": "./scripts/update-browsers.sh",
    "check-deps": "./scripts/check-deps.sh",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "coverage": "c8 playwright test",
    "clean-reports": "./scripts/clean-reports.sh",
    "open-report": "./scripts/open-report.sh",
    "allure:generate": "allure generate ./allure-results --clean -o ./allure-report",
    "allure:open": "allure open ./allure-report",
    "kiwi:start": "cd docker/kiwi-tcms && docker compose up -d",
    "kiwi:stop": "cd docker/kiwi-tcms && docker compose down",
    "kiwi:logs": "cd docker/kiwi-tcms && docker compose logs -f",
    "kiwi:test": "tsx automation/integrations/testKiwiConnection.ts",
    "test:kiwi": "npx playwright test --config=playwright-ifsight.config.ts && tsx automation/integrations/kiwiSync.ts"
  },
  "devDependencies": {
    "@babel/parser": "^7.28.3",
    "@babel/traverse": "^7.28.3",
    "@faker-js/faker": "^8.0.2",
    "@playwright/test": "^1.55.0",
    "@types/babel__traverse": "^7.28.0",
    "@types/node": "^24.3.0",
    "@typescript-eslint/eslint-plugin": "^8.11.0",
    "@typescript-eslint/parser": "^8.11.0",
    "allure-commandline": "^2.13.9",
    "allure-playwright": "^2.15.1",
    "c8": "^8.0.1",
    "dotenv": "^16.3.1",
    "eslint": "^9.34.0",
    "fast-glob": "^3.3.3",
    "prettier": "^3.6.2",
    "tsx": "^4.20.5",
    "typescript": "^5.5.4"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.5"
  }
}
